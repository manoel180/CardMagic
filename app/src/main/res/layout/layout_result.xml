<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/msg"
        style="@style/msg"
        android:layout_alignParentTop="true"
        android:text="@string/msg" />

    <TextView
        android:id="@+id/resultFinal"
        style="@style/result"
        android:layout_centerInParent="true"
        android:text="63" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_recomecar"
        android:id="@+id/btnRecomecar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnExit" android:layout_alignParentBottom="true"
        android:text="Quero sair" android:layout_alignParentRight="true"/>
</RelativeLayout>
